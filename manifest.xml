<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0"
           xmlns:ov="http://schemas.microsoft.com/office/taskpaneappversionoverrides"
           xsi:type="TaskPaneApp">

  <!-- Required Elements -->
  <Id>f9a2b1c0-d3e4-4a5b-8e1c-99f2a4b6c7d9</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>AI Automator</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>
  <DisplayName DefaultValue="AI Word Tools"/>
  <Description DefaultValue="AI powered document automation."/>
  <IconUrl DefaultValue="https://word-automator-frontend.onrender.com/assets/icon-32.png"/>
  <HighResolutionIconUrl DefaultValue="https://word-automator-frontend.onrender.com/assets/icon-80.png"/>
  
  <!-- Required: Support URL -->
  <SupportUrl DefaultValue="https://word-automator-frontend.onrender.com/support"/>
  
  <!-- Optional: App Domains -->
  <AppDomains>
    <AppDomain>word-automator-frontend.onrender.com</AppDomain>
  </AppDomains>
  
  <!-- Hosts -->
  <Hosts>
    <Host Name="Document"/>
  </Hosts>
  
  <DefaultSettings>
    <SourceLocation DefaultValue="https://word-automator-frontend.onrender.com/"/>
  </DefaultSettings>
  
  <Permissions>ReadWriteDocument</Permissions>
  
  <!-- Version Overrides for 1.1 schema -->
  <VersionOverrides xmlns="http://schemas.microsoft.com/office/taskpaneappversionoverrides" 
                    xsi:type="VersionOverridesV1_0">
    
    <Hosts>
      <Host xsi:type="Document">
        <DesktopFormFactor>
          <!-- Function file for UI-less commands -->
          <FunctionFile resid="Commands.Url"/>
          
          <!-- Primary command surface -->
          <ExtensionPoint xsi:type="PrimaryCommandSurface">
            <OfficeTab id="TabHome">
              <Group id="CommandsGroup">
                <Label resid="GroupLabel"/>
                <Icon>
                  <bt:Image size="16" resid="Icon.16x16"/>
                  <bt:Image size="32" resid="Icon.32x32"/>
                  <bt:Image size="80" resid="Icon.80x80"/>
                </Icon>
                
                <Control xsi:type="Button" id="TaskpaneButton">
                  <Label resid="TaskpaneButton.Label"/>
                  <Supertip>
                    <Title resid="TaskpaneButton.Label"/>
                    <Description resid="TaskpaneButton.Tooltip"/>
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="Icon.16x16"/>
                    <bt:Image size="32" resid="Icon.32x32"/>
                    <bt:Image size="80" resid="Icon.80x80"/>
                  </Icon>
                  <Action xsi:type="ShowTaskpane">
                    <TaskpaneId>ButtonTaskPane</TaskpaneId>
                    <SourceLocation resid="Taskpane.Url"/>
                  </Action>
                </Control>
              </Group>
            </OfficeTab>
          </ExtensionPoint>
        </DesktopFormFactor>
      </Host>
    </Hosts>
    
    <!-- Resources -->
    <Resources>
      <bt:Images>
        <bt:Image id="Icon.16x16" DefaultValue="https://word-automator-frontend.onrender.com/assets/icon-32.png"/>
        <bt:Image id="Icon.32x32" DefaultValue="https://word-automator-frontend.onrender.com/assets/icon-32.png"/>
        <bt:Image id="Icon.80x80" DefaultValue="https://word-automator-frontend.onrender.com/assets/icon-80.png"/>
      </bt:Images>
      <bt:Urls>
        <bt:Url id="Commands.Url" DefaultValue="https://word-automator-frontend.onrender.com/"/>
        <bt:Url id="Taskpane.Url" DefaultValue="https://word-automator-frontend.onrender.com/"/>
      </bt:Urls>
      <bt:ShortStrings>
        <bt:String id="GroupLabel" DefaultValue="AI Tools"/>
        <bt:String id="TaskpaneButton.Label" DefaultValue="Open AI Panel"/>
      </bt:ShortStrings>
      <bt:LongStrings>
        <bt:String id="TaskpaneButton.Tooltip" DefaultValue="Open AI tools sidebar for document automation"/>
      </bt:LongStrings>
    </Resources>
  </VersionOverrides>
</OfficeApp>